{
  "manifest_version": 2,
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "name": "Counterspell",
  "description": "counters abusive language",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": 
    [
    {
      "matches": ["*://*/*"],
      "js": ["js/simple-storage.js","js/replacements.js"],
      "run_at": "document_end"
    }
  ]
}
